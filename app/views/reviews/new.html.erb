
<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <% if @restaurant.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @restaurant.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.input :content %>
    <%= f.input :rating, :collection => %w[0 1 2 3 4 5 ] %>
    <%= f.button :submit %>
  <% end %>
</div>
